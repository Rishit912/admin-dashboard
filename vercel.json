{
  "version": 2,
  "builds": [
    {
      "src": "./my-api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "./my-mern-app/dist/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/my-api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/my-mern-app/dist/$1"
    }
  ]
}